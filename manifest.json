{
	"manifest_version": 2,

	"name": "VoiceSearch",
	"description": "Browse youtube using voice commands",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "VoiceSearch"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/*"],
			"js": ["jquery-3.1.1.slim.min.js", "navigation.js"]
		}
	],

	"permissions": [
		"activeTab",
		"tabs",
		"background"
	]
}