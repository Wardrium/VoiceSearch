{
	"manifest_version": 2,

	"name": "VoiceSearch",
	"description": "Browse youtube using voice commands",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icons/icon_gray.png",
		"default_title": "VoiceSearch"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"*://www.youtube.com/*",
		"activeTab",
		"tabs",
		"background",
		"storage"
	]
}